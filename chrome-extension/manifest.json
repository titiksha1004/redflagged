{
  "manifest_version": 3,
  "name": "Fineprint",
  "version": "1.0.0",
  "description": "AI-powered contract analysis and consumer protection",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.docusign.com/*",
    "https://*.adobe.com/*",
    "https://*.legalzoom.com/*",
    "https://*.rocket-lawyer.com/*",
    "https://*.lawdepot.com/*",
    "https://*.nolo.com/*",
    "https://*.findlaw.com/*",
    "https://*.justia.com/*"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.docusign.com/*",
        "https://*.adobe.com/*",
        "https://*.legalzoom.com/*",
        "https://*.rocket-lawyer.com/*",
        "https://*.lawdepot.com/*",
        "https://*.nolo.com/*",
        "https://*.findlaw.com/*",
        "https://*.justia.com/*"
      ],
      "css": ["styles/content.css"],
      "js": [
        "config.js",
        "lib/react.production.min.js",
        "lib/react-dom.production.min.js",
        "lib/react-is.production.min.js",
        "lib/styled-components.min.js",
        "lib/react-is-setup.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/*",
      "styles/*",
      "lib/*",
      "config.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}